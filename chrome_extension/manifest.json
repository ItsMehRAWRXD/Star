{
  "manifest_version": 3,
  "name": "Self-Learning Agent",
  "version": "0.1.0",
  "description": "Send selected text to a native self-learning agent and display results.",
  "permissions": ["contextMenus", "nativeMessaging", "storage", "notifications"],
  "action": {
    "default_title": "Self-Learning Agent",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}